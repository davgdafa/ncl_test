<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ships.ShipsActivity">

    <ImageView
        android:id="@+id/iv_ncl_logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ncl_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_screen_explanation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Welcome to Norwegian Cruise Line. \n\nPlease select a cruise for more information"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_ncl_logo" />

    <Button
        android:id="@+id/btn_go_to_sky_ship_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="SKY"
        app:layout_constraintEnd_toStartOf="@+id/btn_go_to_bliss_ship_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_screen_explanation" />

    <Button
        android:id="@+id/btn_go_to_bliss_ship_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="BLISS"
        app:layout_constraintEnd_toStartOf="@+id/btn_go_to_escape_ship_details"
        app:layout_constraintStart_toEndOf="@+id/btn_go_to_sky_ship_details"
        app:layout_constraintTop_toBottomOf="@+id/tv_screen_explanation" />

    <Button
        android:id="@+id/btn_go_to_escape_ship_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="ESCAPE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_go_to_bliss_ship_details"
        app:layout_constraintTop_toBottomOf="@+id/tv_screen_explanation" />

</androidx.constraintlayout.widget.ConstraintLayout>
